
public class Ex20 {
	public static void main(String[] args) {
     // 중첩 삼항 연산자 : 삼항연산자가 중첩된 것\
     // char k1이 대문자, 소문자, 기타문자 인지 판별하자
      char k1 = 'p' ;
      String res = ((k1>='A')&&(k1<='Z')) ? "대문자"  : ((k1>='a')&&(k1<='z'))? "소문자" : "기타문자" ;
      System.out.println("결과 :" + res);
      
      //int k2가 90이상이면 A학점, 80이상 B학점, 나머지는 F학점
      
      int k2 = 94 ;
      res = (k2 >= 90) ? "A학점": ((k2 >= 80) && (k2 < 90))? "B학점" : "F학점" ;
      System.out.println("결과 :" + res);
      
      
      // int k3가 1 또는 3 이면 남자, 2 또는 4이면 여자, 나머지는 외국인
      
       res = (k3 == 1 || k3 == 3) ? "남자" : (k3 == 2 || k3 == 4) ? "여자" : "외국인" ;
       System.out.println("결과 :" + res);
	}
}
